
<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
           
            <div class="card">
              <div class="card-header">Employee Salary Management details</div>
              <div class="card-body">
                    <form method="POST" action="/add_data">


                        <form method="POST" action="/data/edit/<%= sampleData.Employee_ID  %>">

                        
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Employee Name</label>
                                        <input type="text" name="Employee_Name" id="Employee_Name" class="form-control" value="<%=
                                        sampleData.Employee_Name %>" />
                                    </div>
                                </div>
                            </div>
        
        
                            <div class="row">
                              <div class="col-md-6">
                                  <div class="mb-3">
                                      <label>Employee Id</label>
                                      <input type="number" name="Employee_Id" id="Employee_Id" class="form-control" value="<%=
                                      sampleData.Employee_ID %>"/>
                                  </div>
                              </div>
                          </div>
        
                         
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                      <label >Department/Team </label>
                                          <select name="Department"  id="Department">
                                             <option selected hidden value="default">Select option</option>
                                              <option value="TestingTeam"> Testing Team</option>
                                            <option value="DevelopmentTeam"> Development Team</option>
                                            <option value="UITeam">UI Team</option>
                                      </select>   
                                    </div>
                                </div>
                            </div>
        
                            <div class="row">
                              <div class="col-md-6">
                                <div class="mb-3">
                                  <div name="radio">
                              <label > Sex:</label>
                              <input type="radio" id="Male" name="radio" value="Male" />
                              <label >Male</label>
                           <input type="radio"  id="Male" name="radio" value="Female" />
                           <label >Female</label>
                                  </div>
                                </div>
                              </div>
                            </div>
        
                            
                            <div class="row">
                              <div class="col-md-6">
                                <div class="mb-3">
                              <label >MaritalStatus: </label>
                              <select name="MaritalStatus" id ="MaritalStatus">
                                  <option selected hidden >Select option</option>
                                  <option value="Married"> Married</option>
                                  <option value="unMarried">Unmarried</option>
                              </select>
                            </div>
                              </div>
                            </div>
                         
                            <div class="row">
                              <div class="col-md-6">
                                  <div class="mb-3">
                                      <label>Salary</label>
                                      <input type="number" name="Salary" id="Salary" class="form-control" value="<%=
                                      sampleData.Salary_ %>"/>
                                  </div>
                              </div>
                          </div>
        
        
        
                            <div class="row">
                              <label id="address" name = "address">Address:</label><br><br>
                              <input type="text" rows="5" cols="45" name="address" id="addressinput" value="<%=
                              sampleData.Address_ %>"></input>
                            </div><br>
        
                            <div class="mb-3">
        
        
                              
                              <button type="submit" name="submit_button" class="btn btn-primary" value="Add" >Add to Db</button>
                            </div>
                        </form>
                        <script>
                            document.getElementById('Department').value="<%= sampleData.Department_Team %>";
                            document.getElementsByName('radio').value="<%= sampleData.Sex_ %>";
                            document.getElementById('MaritalStatus').value="<%= sampleData.Marital_Status %>";
                           
                        </script>
                </div>
            </div>

          
                
          

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
